            app:layout_constraintStart_toEndOf="@id/ivIllustration2"
            app:layout_constraintEnd_toEndOf="parent"/>

    </id.co.edtslib.uikit.poinku.viewgroup.AnimatedStrokeConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>