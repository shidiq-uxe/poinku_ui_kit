<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.EDTS.UIKit.Poinku.MediumComponent"
    app:strokeWidth="@dimen/dimen_0"
    app:cardElevation="@dimen/xxxs"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCouponImage"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_0"
            android:layout_margin="@dimen/xxs"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.2439"
            tools:srcCompat="@drawable/ic_placeholder_medium_24"
            tools:tint="@color/primary_30" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCouponName"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/xxs"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.Rubik.B3.Light"
            android:textColor="@color/grey_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivCouponImage"
            app:layout_constraintTop_toTopOf="@id/ivCouponImage"
            app:layout_constraintBottom_toTopOf="@id/tvExpiredIn"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Diskon Rp5.000 Kelloggs Frosted Flakes 300gr - Special Edition" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvExpiredIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxs"
            android:layout_marginHorizontal="@dimen/xxs"
            android:drawablePadding="@dimen/xxxs"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Rubik.B4.Light"
            android:textColor="@color/grey_60"
            app:drawableStartCompat="@drawable/ic_timer_16"
            app:drawableTint="@color/primary_30"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/ivCouponImage"
            app:layout_constraintTop_toBottomOf="@id/tvCouponName"
            app:layout_constraintBottom_toBottomOf="@id/ivCouponImage"
            tools:text="Hingga 2 Nov 2024" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBarcodeCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/s"
            android:layout_marginHorizontal="@dimen/xxs"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/grey_70"
            android:textAppearance="@style/TextAppearance.Rubik.Semibold.D3"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@id/ivCouponImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="IDMG JL89 0667 3TJ0 KL12"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyCode"
            style="@style/Widget.EDTS.UIKit.Poinku.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/xs"
            android:paddingTop="@dimen/xxs"
            android:paddingBottom="@dimen/xxs"
            android:text="@string/copy_code"
            android:textColor="@color/grey_60"
            android:textAppearance="@style/TextAppearance.Rubik.B3.Light"
            android:gravity="top|center"
            app:icon="@drawable/ic_copy_16"
            app:iconTint="@color/primary_30"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/xxxs"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tvBarcodeCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnUseCodeIn"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUseCodeIn"
            style="@style/Widget.EDTS.UIKit.Poinku.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/xs"
            android:paddingTop="@dimen/xxs"
            android:paddingBottom="@dimen/xxs"
            android:text="@string/use_code_in"
            android:textColor="@color/grey_60"
            android:textAppearance="@style/TextAppearance.Rubik.B3.Light"
            android:gravity="top|center"
            app:icon="@drawable/ic_send_16"
            app:iconTint="@color/primary_30"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/xxxs"
            android:maxLines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@id/tvBarcodeCode"
            app:layout_constraintStart_toEndOf="@id/btnCopyCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>