<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main top Shadow -->
    <item>
        <shape>
            <padding
                android:top="@dimen/xxs" />
            <gradient
                android:angle="90"
                android:centerColor="#19242424"
                android:endColor="@android:color/transparent"
                android:startColor="#70727D" />
        </shape>
    </item>

    <!-- Secondary top Shadow -->
    <item>
        <shape>
            <padding
                android:top="@dimen/xxxs" />
            <gradient
                android:angle="90"
                android:centerColor="#80242424"
                android:endColor="@android:color/transparent"
                android:startColor="#3770727D" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>